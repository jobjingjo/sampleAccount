@{
    ViewData["Title"] = "Account Deposit";
}

    <div class="text-center" ng-controller="depositController">
        <h1 class="display-4">Account Deposit</h1>

        <form name="deposit">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" min="0" step="0.01" name="amount" ng-model="amount" class="form-control text-right" placeholder="0.00" aria-label="Amount (to deposit)" required>
            </div>
            <button type="submit" class="btn btn-primary" ng-click="doDeposit()" ng-disabled="deposit.amount.$invalid">Submit</button>
        </form>

    </div>
